<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ecell" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDisablePreview">true</item>
        <item name="android:statusBarColor">@color/colorAccent</item>
        <item name="android:navigationBarColor">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
    </style>

    <style name="MyDialogAnimation.Dialog" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/animate_slide_up_enter</item>
        <item name="android:windowExitAnimation">@anim/animate_slide_down_exit</item>
    </style>


    <style name="Theme.Ecell" parent="Base.Theme.Ecell" />
</resources>