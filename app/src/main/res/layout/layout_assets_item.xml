<?xml version="1.0" encoding="utf-8"?>
<carbon.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="160dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="14dp"
    android:layout_marginBottom="12dp"
    android:background="@color/lightOrange"
    android:orientation="vertical"
    android:paddingStart="18dp"
    android:paddingTop="20dp"
    android:paddingEnd="18dp"
    android:paddingBottom="20dp"
    app:carbon_cornerRadius="18dp"
    app:carbon_elevation="4dp"
    app:carbon_elevationShadowColor="@color/black"
    app:carbon_rippleColor="@color/colorAccent"
    app:carbon_rippleStyle="background">

    <carbon.widget.ImageView
        android:id="@+id/image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="3dp"
        android:background="@color/medOrange"
        android:padding="8dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_bitcoin"
        app:carbon_cornerRadius="25dp" />

    <carbon.widget.TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/main_font_bold"
        android:text="BTC"
        android:textColor="@color/carbon_grey_800"
        android:textSize="16sp" />

    <carbon.widget.TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:fontFamily="@font/main_font_bold"
        android:text="$234,27.90"
        android:textColor="@color/black"
        android:textSize="22sp" />

</carbon.widget.LinearLayout>
